<form action="<%= mountain_path(@mountain.id) %>" method="post">
	<input type="hidden" name="_method" value="put">
	<label>Name:</label>
	<input type="text" name="mountain[name]" value="<%= @mountain.name %>" autofocus>
	<label>Image:</label>
	<input type="text" name="mountain[image]" value="<%= @mountain.image %>" autofocus>
	<label>Country:</label>
	<input type="text" name="mountain[country]" value="<%= @mountain.country %>" autofocus>
	<label>Height:</label>
	<input type="text" name="mountain[height]" value="<%= @mountain.height %>" autofocus>

	<button> Edit Mountain </button>
</form>