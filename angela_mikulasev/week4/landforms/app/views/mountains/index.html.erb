<table>
	<tr>
		<th>Name</th>
		<th></th>
		<th></th>
	</tr>
	<% @mountains.each do |mountain| %>
		<tr>
			<td><%= link_to mountain.name, mountain_path(mountain) %></td>
			<td><%= link_to 'edit', edit_mountain_path(mountain) %></td>
			<td><%= link_to 'destroy', mountain_path(mountain), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>

